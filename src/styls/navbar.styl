
.navWrap
  padding 0
  position fixed
  width 100%
  background transparent
  height 3rem
  transition all 600ms ease-in-out
  ul 
    li  
      a  
        color red
        font-size 2rem 

 @media(min-width:780px)
  .navWrap
    padding 2rem 4rem
    position fixed
    width 100%
    background transparent
    height 3rem
    transition all 600ms ease-in-out
    ul 
      li  
        a  
          color #fff
          font-size 2rem 
 
  .small
    background #fff
    padding 0

    ul 
      li  
        a  
          color silver
          font-size 1.1rem 

.liner
  display flex
  justify-content space-between
  background skyblue
  height 100%
  align-items center
  margin auto
  width 100%
  @media(min-width:780px)
    background transparent
    max-width 80%
  .mainNav

    @media (min-width: 780px)
      display block
      ul
        li
          display inline-block
          padding 0 .3rem
          a          
            text-decoration none
.logoWrap
    z-index 999
    font-size 1.5rem
    padding .3rem
    border 1px solid black
 

.menuIcon
  border-radius:.2rem;
  width:2.4rem;
  border:.05rem solid #fff;
  position:absolute;
  top:.6rem;
  right:.6rem;
  z-index 999

  @media (min-width: 780px)
     display none

.icon-bar
  height: .3rem;
  background-color: #fff;
  margin: .3rem auto;
  width:85%;

@media(max-width:780px)
    .show
      display block
      position fixed
      padding-top 3rem
      top 0
      left 0
      width 100%
      background skyblue
      ul
          li
              padding-bottom 1rem
              a
                  text-decoration none
                  font-size 1.1rem
                  
                  padding-top 2rem


.hide
  display none


